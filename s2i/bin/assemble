#!/bin/bash -e

set -e
shopt -s dotglob

# If the 's2i-gradle-java' assemble script is executed with the '-h' flag, print the usage.
if [[ "$1" == "-h" ]]; then
	exec /usr/libexec/s2i/usage
fi

if [ ! -f /tmp/src/build.gradle ]; then
  echo "FATAL - No build.gradle found"
  exit 1
fi

# Restore artifacts from the previous build (if they exist).
#
if [ -d /tmp/artifacts/.gradle ]; then
  echo "---> Restoring build artifacts..."
  mv /tmp/artifacts/.gradle "$HOME"/
fi

echo "---> Peeking inside"
ls -la /tmp/src
ls -la ./

echo "---> Installing application source..."
#cp -Rf /tmp/src/. ./
cp -Rf /tmp/src/* ./
cp -Rf /tmp/src/.[^.]* ./
chown -R 1001:1001 ./
chown -R 1001:1001 /tml/src

echo "---> Peeking inside"
ls -la /tmp/src
ls -la ./

echo "---> Building application from source..."
#export GRADLE_OPTS="-Dorg.gradle.daemon=false"
#gradle install --debug
./gradlew build --debug

echo "---> Copying built application to app-root..."
cp -a /opt/app-root/src/sta-web/build/libs/sta-web-6.0.0-SNAPSHOT.jar /opt/app-root/app.jar


